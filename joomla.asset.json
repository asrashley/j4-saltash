{
  "$schema": "https://developer.joomla.org/schemas/json-schema/web_assets.json",
  "name": "saltash",
  "version": "4.0.0",
  "description": "This file contains details of the assets used by the Saltash template",
  "license": "GPL-2.0-or-later",
  "assets": [
    {
      "name": "template.saltash.ltr",
      "description": "The css file to be used when the site is left to right (LTR).",
      "type": "style",
      "uri": "media/templates/site/saltash/css/template.css",
      "dependencies": [
        "fontawesome",
        "searchtools"
      ]
    },
    {
      "name": "template.saltash.rtl",
      "description": "The css file to be used when the site is right to left (RTL).",
      "type": "style",
      "uri": "media/templates/site/saltash/css/template-rtl.css",
      "dependencies": [
        "fontawesome"
      ]
    },
    {
      "name": "template.offline",
      "description": "The css file to be used when the site is offline and offline.php is being used.",
      "type": "style",
      "uri": "offline.css"
    },
    {
      "name": "template.active.language",
      "description": "An asset to allow language specific css, eg 'language/[lang-CODE]/[lang-CODE].css', to use it as a dependency to the active template",
      "type": "style",
      "uri": "",
      "class": "LangActiveAssetItem",
      "dependencies": [
        "template.active"
      ]
    },
    {
      "name": "template.user",
      "description": "A file where a user can add their own css.",
      "type": "style",
      "uri": "media/templates/site/saltash/css/user.css",
      "dependencies": [
        "template.active",
        "template.active.language"
      ]
    },
    {
      "name": "template.saltash",
      "description": "The file containing the javascript for this template.",
      "type": "script",
      "uri": "media/templates/site/saltash/js/template.js",
      "attributes": {
        "defer": true
      },
      "dependencies": [
        "core"
      ]
    },
    {
      "name": "template.active",
      "description": "A dummy asset to allow extensions to use it as a dependency to the active template.",
      "type": "script",
      "uri": "",
      "dependencies": [
        "template.saltash"
      ]
    },
    {
      "name": "template.user",
      "description": "The name of a file where a user can add their own javascript",
      "type": "script",
      "uri": "media/templates/site/saltash/js/user.js",
      "dependencies": [
        "template.active"
      ]
    },
    {
      "name": "template.saltash.ltr",
      "type": "preset",
      "dependencies": [
        "template.saltash.ltr#style",
        "template.saltash#script"
      ]
    },
    {
      "name": "template.saltash.rtl",
      "type": "preset",
      "dependencies": [
        "template.saltash.rtl#style",
        "template.saltash#script"
      ]
    },
    {
      "name": "searchtools",
      "type": "style",
      "uri": "media/templates/site/saltash/css/system/searchtools/searchtools.css"
    },
    {
      "name": "fontawesome",
      "type": "style",
      "uri": "media/system/css/joomla-fontawesome.min.css"
    },
    {
      "name": "template.font.noto",
      "type": "style",
      "uri": "media/templates/site/saltash/css/global/fonts-noto.css"
    },
    {
      "name": "template.font.playfair",
      "type": "style",
      "uri": "media/templates/site/saltash/css/global/fonts-playfair.css"
    },
    {
      "name": "template.font.roboto",
      "type": "style",
      "uri": "media/templates/site/saltash/css/global/fonts-roboto.css"
    },
    {
      "name": "template.font.sanchez",
      "type": "style",
      "uri": "media/templates/site/saltash/css/global/fonts-sanchez.css"
    }
  ]
}
