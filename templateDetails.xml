<?xml version="1.0" encoding="utf-8"?>
<extension type="template" client="site">
    <name>saltash</name>
    <version>1.0</version>
    <creationDate>February 2017</creationDate>
    <author>Joomla! Project</author>
    <authorEmail>admin@joomla.org</authorEmail>
    <copyright>(C) 2017 Open Source Matters, Inc.</copyright>
    <description>TPL_SALTASH_XML_DESCRIPTION</description>
    <files>
        <filename>component.php</filename>
        <filename>error.php</filename>
        <filename>index.php</filename>
        <filename>joomla.asset.json</filename>
        <filename>offline.php</filename>
        <filename>templateDetails.xml</filename>
        <filename>template_preview.png</filename>
        <filename>template_thumbnail.png</filename>
        <folder>html</folder>
    </files>
    <media destination="templates/site/saltash" folder="media">
            <folder>css</folder>
            <folder>images</folder>
            <folder>js</folder>
            <folder>scss</folder>
    </media>

    <positions>
        <position>topbar</position>
        <position>below-top</position>
        <position>menu</position>
        <position>search</position>
        <position>language</position>
        <position>banner</position>
        <position>brand-right</position>
        <position>top-a</position>
        <position>top-b</position>
        <position>main-top</position>
        <position>main-bottom</position>
        <position>breadcrumbs</position>
        <position>sidebar-left</position>
        <position>sidebar-right</position>
        <position>bottom-a</position>
        <position>bottom-b</position>
        <position>footer</position>
        <position>debug</position>
    </positions>
    <languages folder="language">
        <language tag="en-GB">en-GB/tpl_saltash.ini</language>
        <language tag="en-GB">en-GB/tpl_saltash.sys.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="advanced">
                <field
                    name="brand"
                    type="radio"
                    label="TPL_SALTASH_BRAND_LABEL"
                    default="1"
                    layout="joomla.form.field.radio.switcher"
                    filter="boolean"
                    >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <field
                    name="logoFile"
                    type="media"
                    default=""
                    label="TPL_SALTASH_LOGO_LABEL"
                    showon="brand:1"
                />

                <field
                    name="siteTitle"
                    type="text"
                    default=""
                    label="TPL_SALTASH_TITLE"
                    filter="string"
                    showon="brand:1"
                />

                <field
                    name="siteDescription"
                    type="text"
                    default=""
                    label="TPL_SALTASH_TAGLINE"
                    filter="string"
                    showon="brand:1"
                />

                <field
                    name="siteCopyright"
                    type="text"
                    default=""
                    label="TPL_SALTASH_COPYRIGHT"
                    filter="string"
                    showon="brand:1"
                />

                <field
                    name="noteFontScheme"
                    type="note"
                    description="TPL_SALTASH_FONT_NOTE_TEXT"
                    class="alert alert-warning"
                />

                <field
                    name="colorName"
                    type="list"
                    default="colors_standard"
                    label="TPL_SALTASH_COLOR_NAME_LABEL"
                    >
                    <option value="colors_standard">TPL_SALTASH_COLOR_NAME_STANDARD</option>
                    <option value="colors_alternative">TPL_SALTASH_COLOR_NAME_ALTERNATIVE</option>
                </field>

                <field
                    name="loadNotoFont"
                    type="radio"
                    label="TPL_SALTASH_LOAD_FONT_NOTO"
                    layout="joomla.form.field.radio.switcher"
                    default="0"
                    filter="integer"
                    >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <field
                    name="loadPlayfairFont"
                    type="radio"
                    label="TPL_SALTASH_LOAD_FONT_PLAYFAIR"
                    layout="joomla.form.field.radio.switcher"
                    default="0"
                    filter="integer"
                    >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <field
                    name="loadRobotoFont"
                    type="radio"
                    label="TPL_SALTASH_LOAD_FONT_ROBOTO"
                    layout="joomla.form.field.radio.switcher"
                    default="0"
                    filter="integer"
                    >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <field
                    name="loadSanchezFont"
                    type="radio"
                    label="TPL_SALTASH_LOAD_FONT_SANCHEZ"
                    layout="joomla.form.field.radio.switcher"
                    default="0"
                    filter="integer"
                    >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <field
                    name="brandingFont"
                    type="list"
                    default="'Playfair Display', serif"
                    label="TPL_SALTASH_BRANDING_FONT_LABEL"
                    >
                    <option value="'Playfair Display', serif">TPL_SALTASH_FONT_PLAYFAIR</option>
                    <option value="'Roboto', sans-serif">TPL_SALTASH_FONT_ROBOTO</option>
                    <option value="'Noto Sans', sans-serif">TPL_SALTASH_FONT_NOTO</option>
                    <option value="'Sanchez', serif">TPL_SALTASH_FONT_SANCHEZ</option>
                </field>

                <field
                    name="headerFont"
                    type="list"
                    default="'Playfair Display', serif"
                    label="TPL_SALTASH_HEADER_FONT_LABEL"
                    >
                    <option value="'Playfair Display', serif">TPL_SALTASH_FONT_PLAYFAIR</option>
                    <option value="'Roboto', sans-serif">TPL_SALTASH_FONT_ROBOTO</option>
                    <option value="'Noto Sans', sans-serif">TPL_SALTASH_FONT_NOTO</option>
                    <option value="'Sanchez', serif">TPL_SALTASH_FONT_SANCHEZ</option>
                </field>

                <field
                    name="bodyFont"
                    type="list"
                    default="'Noto Sans', sans-serif"
                    label="TPL_SALTASH_BODY_FONT_LABEL"
                    >
                    <option value="'Playfair Display', serif">TPL_SALTASH_FONT_PLAYFAIR</option>
                    <option value="'Roboto', sans-serif">TPL_SALTASH_FONT_ROBOTO</option>
                    <option value="'Noto Sans', sans-serif">TPL_SALTASH_FONT_NOTO</option>
                    <option value="'Sanchez', serif">TPL_SALTASH_FONT_SANCHEZ</option>
                </field>

                <field
                    name="fluidContainer"
                    type="radio"
                    layout="joomla.form.field.radio.switcher"
                    default="0"
                    label="TPL_SALTASH_FLUID_LABEL"
                    >
                    <option value="0">TPL_SALTASH_STATIC</option>
                    <option value="1">TPL_SALTASH_FLUID</option>
                </field>

                <field
                    name="stickyHeader"
                    type="radio"
                    label="TPL_SALTASH_STICKY_LABEL"
                    layout="joomla.form.field.radio.switcher"
                    default="0"
                    filter="integer"
                    >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <field
                    name="backTop"
                    type="radio"
                    label="TPL_SALTASH_BACKTOTOP_LABEL"
                    layout="joomla.form.field.radio.switcher"
                    default="0"
                    filter="integer"
                    >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
